@model IEnumerable<ExpenseTracker.Models.Categories>

@{
   
    ViewData["PageTitle"] = "Categories";
    ViewData["PageActionUrl"] = ""+"New Category";
    // ViewData["PageActionText"] = "/Categories/AddOrEdit";
    int currentPage = Convert.ToInt32(ViewData["CurrentPage"] ?? 1);
    int totalPages = Convert.ToInt32(ViewData["TotalPages"] ?? 1);
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0">Categories</h3>
                <a asp-action="AddOrEdit" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Category
                </a>
            </div>

            <table class="table table-bordered table-hover text-center align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Category</th>
                        <th>Type</th>
                        <th style="width: 160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.TitleWithIcon</td>

                                <td>
                                    @if (category.Type == "Income")
                                    {
                                        <span class="badge bg-success">Income</span>
                                    }
                                    else if (category.Type == "Expense")
                                    {
                                        <span class="badge bg-danger">Expense</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@category.Type</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <div class="d-inline-flex gap-2">

                                        <!-- ✏️ Edit Button -->
                                        <a href="/Categories/AddOrEdit/@category.CategoryId"
                                           class="action-btn edit-btn"
                                           title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>

                                        <!-- 🗑️ Delete Button -->
                                        <a href="/Categories/Delete/@category.CategoryId"
                                           class="action-btn delete-btn"
                                           title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this category?');">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>

                                    </div>
                                </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted text-center">No categories found.</td>
                        </tr>
                    }
                </tbody>

            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <!-- Previous -->
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">Previous</a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

