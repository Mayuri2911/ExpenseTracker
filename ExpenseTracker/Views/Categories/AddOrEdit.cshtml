@model ExpenseTracker.Models.Categories

@{
    ViewData["PageTitle"] = Model.CategoryId == 0
        ? "Create New Category"
        : "Edit Category";
}

<div class="page-wrapper">

    <!-- Page Title -->
    <div class="text-center mb-4">
        <h3 class="text-light">@ViewData["PageTitle"]</h3>
        <hr class="text-secondary" />
    </div>

    <!-- FORM + ICON SIDE BY SIDE -->
    <div class="row justify-content-center g-4">

        <!-- Left Side – FORM -->
        <div class="col-lg-5 col-md-6">
            <div class="card bg-dark border-0 shadow p-4 rounded">

                <form asp-action="AddOrEdit">

                    <input type="hidden" asp-for="CategoryId" />

                    <!-- Type -->
                    <div class="mb-4 text-center">
                        <div class="btn-group">

                            <input type="radio" class="btn-check" id="exp" name="Type" value="Expense"
                            @(Model.Type == "Expense" ? "checked" : "")>
                            <label class="btn btn-outline-warning" for="exp">Expense</label>

                            <input type="radio" class="btn-check" id="inc" name="Type" value="Income"
                            @(Model.Type == "Income" ? "checked" : "")>
                            <label class="btn btn-outline-info" for="inc">Income</label>

                        </div>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>

                    <!-- Title -->
                    <div class="mb-3">
                        <label class="form-label text-light">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter Title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- Icon -->
                    <div class="mb-3">
                        <label class="form-label text-light">Icon</label>
                        <input asp-for="Icon" class="form-control" placeholder="Enter Icon (Ex: fa-solid fa-car)" />
                        <span asp-validation-for="Icon" class="text-danger small"></span>
                    </div>

                    <!-- Submit -->
                    <div class="text-center mt-4">
                        <button class="btn btn-success px-4 py-2">Submit</button>
                    </div>

                </form>
            </div>
        </div>

        <!-- Right Side – ICON PREVIEW -->
        <div class="col-lg-3 col-md-4 d-flex">
            <div class="card bg-secondary shadow rounded flex-fill d-flex justify-content-center align-items-center p-4"
                 style="min-height: 270px;">
                <i class="fa-solid fa-shapes fa-4x text-white"></i>
            </div>
        </div>

    </div>
</div>

