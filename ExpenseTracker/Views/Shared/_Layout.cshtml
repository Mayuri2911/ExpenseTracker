<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="e-dark">
    <div class="d-flex">

        <!-- SIDEBAR -->
        <div class="sidebar-container">
            <partial name="_SideBar" />
        </div>

        <!-- MAIN CONTENT -->
        <div class="main-content flex-grow-1">

            <!-- TOP NAVBAR -->
            <header>
                <nav class="navbar">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                </nav>
            </header>

            <!-- PAGE CONTENT WRAPPER -->
            <div class="content-wrapper p-4">

                @if (ViewData["isDashBoard"] == null)
                {
                    <div class="row mb-4">
                        <div class="col-md-7">
                            <div class="d-flex flex-column">

                                <div class="d-flex align-items-center mb-2">
                                    <div class="flex-grow-1">
                                        <h3 class="fw-bold mb-0">@ViewData["PageTitle"]</h3>
                                    </div>

                                    @if (ViewData["PageActionText"] != null)
                                    {
                                        <a class="btn btn-success" href="@ViewData["PageActionUrl"]">
                                            @ViewData["PageActionText"]
                                        </a>
                                    }
                                </div>

                                <!-- Breadcrumb -->
                                <nav class="simple-breadcrumb">
                                    <a asp-controller="DashBoard" asp-action="Index">
                                        <i class="fa-solid fa-house"></i> Home
                                    </a>
                                    <i class="fa-solid fa-angle-right mx-2"></i>
                                    <span>@ViewData["PageTitle"]</span>
                                </nav>

                            </div>
                        </div>
                    </div>
                }

                <!-- FINAL PAGE BODY (Only ONE RenderBody) -->
                @RenderBody()

            </div>

            <!-- FOOTER -->
            <footer class="border-top footer text-muted mt-3">
                <div class="container">
                    &copy; 2025 - ExpenseTracker
                </div>
            </footer>

        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
